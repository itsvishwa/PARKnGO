<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:onClick="parking_status_btn_handler"
    android:background="@drawable/status_main_detail_box"
    android:elevation="3dp"
    android:paddingHorizontal="25dp"
    android:paddingVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/ps_parking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PA001"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <TextView
            android:id="@+id/ps_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/red_rounded_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:text="Payment Due"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/ps_parking_id"
            app:layout_constraintStart_toEndOf="@+id/ps_parking_id"
            app:layout_constraintTop_toTopOf="@+id/ps_parking_id"
            app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/ps_vehicle_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="CAR 1565"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ps_status"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/ps_status"
        app:layout_constraintVertical_bias="0.333" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_arrow_forward_ios_20"
        app:layout_constraintBottom_toBottomOf="@+id/ps_vehicle_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ps_vehicle_number"
        app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
