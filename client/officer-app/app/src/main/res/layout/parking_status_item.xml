<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/status_main_detail_box"
    android:elevation="3dp"
    android:paddingHorizontal="25dp"
    android:paddingVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/ps_vehicle_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="### 0000 ##"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ps_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="00 ### 0000 | 00.00 ## "
        android:textColor="@color/textGrey"
        android:textSize="14sp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ps_txt" />

    <TextView
        android:id="@+id/ps_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Session ended Date &amp; Time"
        android:textColor="@color/textGrey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ps_vehicle_number" />

    <TextView
        android:id="@+id/ps_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_rounded_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:text="Payment Due"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ps_vehicle_type" />

    <TextView
        android:id="@+id/ps_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_rounded_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:text="TYPE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
