        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/duty_in_swipe_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="14dp"
            app:border_radius="10dp"
            app:icon_margin="@dimen/slidetoact_default_area_margin"
            app:inner_color="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout20"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout20"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout20"
            app:outer_color="@color/detailBoxBackground"
            app:text="Swipe to mark your attendance"
            app:text_color="@color/textGrey"
            app:text_size="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Note that this action can be only done when you at the respective parking space"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="@+id/duty_in_swipe_btn"
            app:layout_constraintStart_toStartOf="@+id/duty_in_swipe_btn"
            app:layout_constraintTop_toBottomOf="@+id/duty_in_swipe_btn" />


