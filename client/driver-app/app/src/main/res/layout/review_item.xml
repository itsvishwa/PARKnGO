<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_6_with_outline"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="15dp"
    android:paddingHorizontal="17dp"
    android:layout_marginBottom="8dp"
    android:onClick="review_item_handler">

    <TextView
        android:id="@+id/ri_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vishwa Sandaruwan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ri_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:progressTint="@color/primaryColor"
        android:rating="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ri_name" />

    <TextView
        android:id="@+id/ri_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="16sp"
        android:text="Convenient and well-located parking space, though a bit tight for larger vehicles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ri_rating_bar" />

    <TextView
        android:id="@+id/ri_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023/09/10"
        app:layout_constraintBottom_toBottomOf="@+id/ri_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ri_name" />
</androidx.constraintlayout.widget.ConstraintLayout>